<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
            />
    </head>
    <body>


        <div>

        </div>

        <table>
            <tr>
                <th>#</th>
                <th>nombre</th>
                <th>categoria</th>
                <th>cantidad</th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <form action="/" method="post">
                    <td></td>
                    <td> <input type="text" name="nombre" placeholder="Nombre"></td>
                    <td> <input type="text" name="categoria"
                            placeholder="Categoria"></td>
                    <td> <input type="number" name="cantidad"
                            placeholder="Cantidad"></td>
                    <td> <button><span class="material-symbols-outlined">
                                add
                            </span></button></td>
                </form>
            </tr>
            {{#each productos}}
            <tr id="tr{{id}}">
                <td>{{id}} </td>
                <td><input type="text" id="nombre-{{id}}" name="nombre-{{id}}"
                        value="{{nombre}}" readonly></td>
                <td><input type="text" id="categoria-{{id}}"
                        name="categoria-{{id}}" value="{{categoria}}" readonly></td>
                <td><input type="number" id="cantidad-{{id}}"
                        name="cantidad-{{id}}" value="{{cantidad}}" readonly></td>
                <td><a href="#" onclick="editar({{id}})">
                        <span class="material-symbols-outlined">
                            edit
                        </span>
                    </a>
                </td>

                <td>
                    <a href="/{{id}}?_method=delete">
                        <span class="material-symbols-outlined">
                            delete
                        </span></a>
                </td>
            </tr>
            {{/each}}
        </table>

        <script>
    let variable= true;
    function editar(id){
        const nombre = document.getElementById(`nombre-${id}`);
        const categoria = document.getElementById(`categoria-${id}`);
        const cantidad = document.getElementById(`cantidad-${id}`);
        if(variable){

            nombre.removeAttribute("readonly"  , false)
            categoria.removeAttribute("readonly"  , false)
            cantidad.removeAttribute("readonly"  , false)
            nombre.style.background="yellow";
            categoria.style.background="yellow";
            cantidad.style.background="yellow";
            variable=false;
        }else{

            nombre.removeAttribute("readonly"  , true)
            categoria.removeAttribute("readonly"  , true)
            cantidad.removeAttribute("readonly"  , true)
            nombre.style.background="white";
            categoria.style.background="white";
            cantidad.style.background="white";
            variable=true;
            document.location(window.location.href = `/${id}/${nombre.value}/${categoria.value}/${cantidad.value}?_method=put`)

        }
        

            }
</script>

    </body>
</html>